<h1><%= t('taxonomies') %></h1>


<div class='row'>
  <div class='span2'>
    <%= link_to t(:new_taxonomy), new_taxonomy_path, class: 'btn btn-primary' %>
  </div>
  <div class='span7'>
    <%= paginate @taxonomies, theme: 'twitter-bootstrap' %>
  </div>
  <div class='span3'>
    <%= form_tag taxonomies_path, method: :get, class: 'form-search' do %>
      <div class="input-append">
        <%= search_field_tag 'query', nil, placeholder: 'Søkeord', class: "span2 search-query"%>
        <%= button_tag 'Søk', class: "btn"%>
      </div>
    <%- end -%>
  </div>
</div>

<%- unless @taxonomies.blank? -%>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th><%= SnlAdmin.taxonomy_class.human_attribute_name(:id) %></th>
      <th><%= SnlAdmin.taxonomy_class.human_attribute_name(:title) %></th>
    </tr>
  </thead>
  <tbody>
  <%- @taxonomies.each do |taxonomy| -%>
    <tr>
      <td><%= taxonomy.id %></td>
      <td><%= taxonomy.title %></td>
      <td><%= link_to t(:show), taxonomy,
              class: 'btn btn-mini btn-info' %></td>
      <td><%= link_to t(:edit), edit_taxonomy_path(taxonomy),
              class: 'btn btn-mini btn-warning' %></td>
      <td><%= link_to(t(:delete), taxonomy,
              method: :delete,
              data: { confirm: t(:are_you_sure) },
              class: "btn btn-mini btn-danger") %></td>
    </tr>
  <%- end -%>
  </tbody>
</table>

<%- end -%>
<div class='span12'>
  <%= paginate @taxonomies, theme: 'twitter-bootstrap' %>
</div>
