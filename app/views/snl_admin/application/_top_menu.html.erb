<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'SNL Admin', main_app.admin_url, class: 'brand' %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li><%= link_to t(:home), main_app.root_url %></li>
          <%= nav_link :dashboard, path: snl_admin.root_path, name: t(:dashboard) %>
          <%= nav_link :users, name: t(:users) %>
          <%= nav_link :redirections, name: t(:redirections) %>
          <%- if current_user -%>
            <li>
              <%= link_to "#{t(:sign_out)} #{current_user.username}",
                          main_app.logout_path %>
            </li>
          <%- else -%>
            <li>
              <%= link_to t(:sign_in), main_app.login_path %>
            </li>
          <%- end -%>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
