<div class="page-header">
  <h1><%= t('tagsonomies') %></h1>
</div>

<div class='col-md-12'>
  <%= paginate @tagsonomies, theme: 'twitter-bootstrap' %>
</div>

<div class='row'>
  <div class='col-md-6'>
    <%= link_to t(:new_tagsonomy), new_tagsonomy_path, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-6">
    <%= form_tag tagsonomies_path, method: :get,
                                  class: 'form-inline pull-right',
                                  role: 'form' do %>
      <div class="form-group">
        <%= search_field_tag 'query', nil, placeholder: 'Søkeord', class: 'form-control' %>
        <%= button_tag 'Søk', class: "btn btn-default" %>
      </div>
    <%- end -%>
  </div>
</div>

<%- unless @tagsonomies.blank? -%>
  <table class="table table-striped table-bordered table-condensed table-hover">
    <thead>
      <tr>
        <th><%= SnlAdmin.tagsonomy_class.human_attribute_name(:parents) %></th>
        <th><%= SnlAdmin.tagsonomy_class.human_attribute_name(:title) %></th>
        <th><%= SnlAdmin.tagsonomy_class.human_attribute_name(:type) %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <%- @tagsonomies.each do |tagsonomy| -%>
      <tr>
        <td><%= tagsonomy.ancestors.pluck(:title).join('/') %></td>
        <td><%= tagsonomy.title %></td>
        <td><%= tagsonomy.type %></td>
        <td><%= link_to t(:show), tagsonomy,
                class: 'btn btn-xs btn-info' %></td>
        <td><%= link_to t(:edit), edit_tagsonomy_path(tagsonomy),
                class: 'btn btn-xs btn-warning' %></td>
        <td><%= link_to(t(:delete), tagsonomy,
                method: :delete,
                data: { confirm: t(:are_you_sure) },
                class: "btn btn-xs btn-danger") %></td>
      </tr>
    <%- end -%>
    </tbody>
  </table>
<%- end -%>

<div class='col-md-12'>
  <%= paginate @tagsonomies, theme: 'twitter-bootstrap' %>
</div>

