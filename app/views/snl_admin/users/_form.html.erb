<%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <legend><%= @title %></legend>
  <fieldset>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= t('errors.template.body') %></h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :firstname,
                          placeholder: SnlAdmin.user_class.human_attribute_name(:firstname) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :lastname,
                          placeholder: SnlAdmin.user_class.human_attribute_name(:lastname) %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :email_address,
                  SnlAdmin.user_class.human_attribute_name(:email_address),
                  class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :email_address,
                         placeholder: SnlAdmin.user_class.human_attribute_name(:email_address) %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :role,
                  SnlAdmin.user_class.human_attribute_name(:role),
                  class: 'control-label' %>
      <div class='controls'>
        <%= f.collection_select :role, SnlAdmin.user_class::ROLES,
                                :to_s, :humanize %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit t('save'), class: 'btn btn-primary' %>
      <%= link_to t('cancel'), users_path, class: 'btn' %>
    </div>

  </fieldset>
<%- end -%>
