<%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  <legend><%= @title %></legend>
  <fieldset>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :firstname,
                          placeholder: User.human_attribute_name(:firstname) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :lastname,
                          placeholder: User.human_attribute_name(:lastname) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :email_address,
                         placeholder: User.human_attribute_name(:email_address) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.password_field :password,
                             placeholder: User.human_attribute_name(:password) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.collection_select :role, User::ROLES,
                                :to_s, :humanize %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :mobilenumber,
                         placeholder: User.human_attribute_name(:mobilenumber) %>
      </div>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.collection_select :license_id, License.all, :id, :name %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :email_notifications, class: 'checkbox control-label' do %>
          <div class='controls'><%= f.check_box :email_notifications %> <%= User.human_attribute_name(:email_notifications) %></div>
        <% end %>
    </div>

    <div class='control-group'>
      <%= f.label :fixed_ceiling,
                  User.human_attribute_name(:fixed_ceiling),
                  class: 'control-label' %>
      <div class='controls'>
        <%= f.text_field :fixed_ceiling,
                         placeholder: User.human_attribute_name(:fixed_ceiling) %>
      </div>
    </div>

    <div class='control-group'>
      <%= f.label :activated, class: 'checkbox control-label' do %>
        <div class='controls'>
          <%= f.check_box :activated %> <%= User.human_attribute_name(:activated) %>
        </div>
      <% end %>
    </div>

    <div class='control-group'>
      <%= label_tag :confirmed, class: 'checkbox control-label' do %>
        <div class='controls'>
          <%= check_box_tag :confirmed, 'yes', @user.confirmed? %> <%= t('confirmed') %>
        </div>
      <% end %>
    </div>

    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :postal_address,
                         placeholder: User.human_attribute_name(:postal_address) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit t('save'), class: 'btn btn-primary' %>
      <%= link_to t('cancel'), users_path, class: 'btn' %>
    </div>

  </fieldset>
<%- end -%>
