<address>
  <strong><%= @user.public_name %></strong><br>
  <%= @user.confirmation_status %><br>
  <%= @user.activation_status %><br>
  <%= @user.role_name %><br>
  <%= @user.license_name %><br>
  <%= @user.ceiling %><br>
  <%= @user.mobile %>
  <%= @user.city %>
  <a href="mailto:<%= @user.email_address %>"><%= @user.email_address %></a>
</address>

<div class='row'>
  <div class='span2'>
    <%= link_to t('edit'), edit_user_path(@user), class: 'btn btn-primary' %>
  </div>
  <div class='span2'>
    <%= link_to t('reset_statistics'),
        reset_statistics_user_path(@user),
        method: :post,
        class: 'btn btn-primary btn-danger' %>
  </div>
</div>

